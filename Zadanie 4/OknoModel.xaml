<Window x:Class="Zadanie_4.OknoModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie_4"
        mc:Ignorable="d"
        Title="OknoModel" 
		Height="150"
		Width="300"
		FontSize="20">
    <Grid>
        <DataGrid ItemsSource="{Binding XPath=Silnik}"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Pojemność Silnika" Binding="{Binding XPath=PojemnośćSilnika}" />
                <DataGridTextColumn Header="Moc Silnika" Binding="{Binding XPath=MocSilnika}" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>


</Window>
